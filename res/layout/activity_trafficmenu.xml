<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#44000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="20" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/main_black" />
        
        <Button
            android:id="@+id/trafficmenu_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main_black"
            android:text="x"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/trafficmenu_tv_tableLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_black"
        android:gravity="center_horizontal"
        android:text="路况"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/forth_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/trafficmenu_bt_traffic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_jam" />

        <ImageButton
            android:id="@+id/trafficmenu_bt_accident"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_accident" />

        <ImageButton
            android:id="@+id/trafficmenu_bt_warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_warn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trafficmenu_tv_traffic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="交通堵塞" />

        <TextView
            android:id="@+id/trafficmenu_tv_accident"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="事故" />

        <TextView
            android:id="@+id/trafficmenu_tv_warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="危险" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/forth_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/trafficmenu_bt_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_camera" />

        <ImageButton
            android:id="@+id/trafficmenu_bt_maphi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_maphi" />

        <ImageButton
            android:id="@+id/trafficmenu_bt_mapproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_mapproblem" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trafficmenu_tv_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="摄像头" />

        <TextView
            android:id="@+id/trafficmenu_tv_maphi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="地图聊天" />

        <TextView
            android:id="@+id/trafficmenu_tv_mapproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="地图问题" />
    </LinearLayout>

</LinearLayout>