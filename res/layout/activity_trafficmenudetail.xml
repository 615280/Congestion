<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#44000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="20" >

    <TextView
        android:id="@+id/traffictypedetail_tv_tableLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_black"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/forth_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/traffictypedetail_bt_jam_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_jam_middle" />

        <ImageButton
            android:id="@+id/traffictypedetail_bt_jam_serious"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_jam_serious" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"  >

        <TextView
            android:id="@+id/traffictypedetail_tv_jam_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="中等" />

         <TextView
            android:id="@+id/traffictypedetail_tv_jam_serious"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="严重" />
    </LinearLayout>

    <EditText
        android:id="@+id/traffictypedetail_et_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="分享详情..." />

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/forth_color"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/traffictypedetail_bt_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_takephoto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拍照" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/traffictypedetail_bt_waitpublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="稍后"
            android:textColor="@color/main_black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/traffictypedetail_bt_topublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="发送"
            android:textColor="@color/main_black"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>