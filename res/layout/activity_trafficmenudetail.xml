<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#44000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="20" >

    <TextView
        android:id="@+id/traffictypedetail_tv_tableLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_black"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <RadioGroup
        android:id="@+id/traffictypedetail_radiogp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/forth_color"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/traffictypedetail_bt_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1" />
        <!--             android:button="@null" -->

        <RadioButton
            android:id="@+id/traffictypedetail_bt_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1" />
<!--             android:button="@null" /> -->

        <RadioButton
            android:id="@+id/traffictypedetail_bt_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1" />
<!--             android:button="@null" /> -->
    </RadioGroup>

    <LinearLayout
        android:id="@+id/traffictypedetail_linearlayout_tvs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/traffictypedetail_tv_low"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/traffictypedetail_tv_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/traffictypedetail_tv_high"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <EditText
        android:id="@+id/traffictypedetail_et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forth_color"
        android:hint="分享详情..." />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageView
            android:id="@+id/traffictypedetail_bt_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/mark_takephoto"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:text="拍照" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/forth_color"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/traffictypedetail_bt_waitpublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="稍后"
            android:textColor="@color/main_black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/traffictypedetail_bt_topublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="发送"
            android:textColor="@color/main_black"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>